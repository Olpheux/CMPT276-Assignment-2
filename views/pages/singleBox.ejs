<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="../css/default.css">
  <link rel="script" href="../default.js">
</head>

<body>
<center>
<div id="drawingArea">
  <!-- Should only run once, doesn't really need to be a loop, but know this syntax works-->
  <!-- Guess this handles for when you have two boxes with the same name too...? -->
  <% singleBox.results.forEach(function(box){ %>
    <div class="drawnBox" style="background-color:<%= box.ColorName %>;min-width:<%= box.Height %>px;min-height:<%= box.Width %>px;display:inline-block;margin:5px"></div>
</div>
<div>
    <table id="rectList">
        <thead>
          <td id="entryHeader">Entry</td>
          <td id="valueHeader">Value</td>
        </thead>
        <tr>
          <td>Name:</td>
          <td><% singleBox.Name %></td>
        </tr>
        <tr>
          <td>Color:</td>
          <td><% singleBox.colorName %></td>
        </tr>
        <tr>
          <td>Color (Hex):</td>
          <td><% singleBox.colorHex %></td>
        </tr>
        <tr>
          <td>Height</td>
          <td><% singleBox.height %></td>
        </tr>
        <tr>
          <td>Width:</td>
          <td><% singleBox.width %></td>
        </tr>
        <tr>
          <td>Total Area:</td>
          <td><% singleBox.width %></td>
        </tr>
        <tr>
          <td>Box ID:</td>
          <td><% singleBox.id %></td>
        </tr>
    </table>
</div>
<div>
    <a href="delete/<%=singleBox.Name%>"><button id="deleteButton">Delete</button></a>
    <a href="modify/<%=singleBox.Name%>"><button id="modifyButton">Modify Box</button></a>
</div>
<% }) %>
</center>
</body>
</html>

