<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="../css/default.css">
  <link rel="script" href="../default.js">
</head>

<body>
<center>
<div id="drawingArea">
  <% var box = singleBox.results[0]; %>
    <div class="drawnBox" style="background-color:<%= box.ColorName %>;min-width:<%= box.Width %>px;min-height:<%= box.Height %>px;display:inline-block;margin:5px"></div>
</div>
<div>
    <table id="rectList">
        <thead>
          <td id="entryHeader">Entry</td>
          <td id="valueHeader">Value</td>
        </thead>
        <tr>
          <td>Name:</td>
          <td><%= box.Name %></td>
        </tr>
        <tr>
          <td>Color:</td>
          <td><%= box.ColorName %></td>
        </tr>
        <tr>
          <td>Color (Hex):</td>
          <td><%= box.ColorHex %></td>
        </tr>
        <tr>
          <td>Height</td>
          <td><%= box.Height %></td>
        </tr>
        <tr>
          <td>Width:</td>
          <td><%= box.Width %></td>
        </tr>
        <tr>
          <td>Total Area:</td>
          <td><%= box.Area %></td>
        </tr>
        <tr>
          <td>Box ID:</td>
          <td><%= box.ID %></td>
        </tr>
    </table>
</div>
<div>
    <a href="/deleteBox/<%=box.Name%>"><button id="deleteButton">Delete</button></a>
    <a href="/modifyBox/<%=box.Name%>"><button id="modifyButton">Modify Box</button></a>
</div>
</center>
</body>
</html>

